<!DOCTYPE html>
<html>
  <head>
    <title>ActiveMonitor</title>
    <%= stylesheet_link_tag    "active_monitor/application", :media => "all" %>
    <%= javascript_include_tag "active_monitor/application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="<%= root_path %>">ActiveMonitor</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="<%= "active" if @active_tab == :dashboard %>"><a href="<%= root_path %>">Dashboard</a></li>
              <li class="<%= "active" if @active_tab == :actions %>"><a href="<%= actions_path %>">Controller Actions</a></li>
              <li class="<%= "active" if @active_tab == :database %>"><a href="#">Database</a></li>
              <li class="<%= "active" if @active_tab == :client %>"><a href="#">Client</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
